<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:title="Gestion du Profil"
        android:titleTextColor="#FFFFFF" />
    <!-- Titre de l'activité -->
    <TextView
        android:id="@+id/text_view_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestion du Profil"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <!-- Zone d'affichage des informations du profil -->
    <LinearLayout
        android:id="@+id/linear_layout_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/text_view_profile_title">

        <!-- Champ nom complet -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom Complet" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Champ courriel -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Courriel"
                android:inputType="textEmailAddress"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bouton pour mettre à jour le profil -->
        <Button
            android:id="@+id/button_update_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mettre à Jour le Profil"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/button_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Déconnexion"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Bouton pour afficher l'activité de gestion du profil -->
        <Button
            android:id="@+id/btn_gotobdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestion de la base de donnees"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>

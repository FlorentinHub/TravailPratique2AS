<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentPersonnages">
    <EditText
        android:id="@+id/edit_text_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du personnage"
        android:inputType="text"
        android:layout_above="@id/edit_text_description"
        android:layout_marginBottom="0dp"/>

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_view_level"
        android:layout_marginTop="16dp"
        android:hint="Description"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_view_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar_level"
        android:layout_marginTop="16dp"
        android:text="Niveau" />

    <SeekBar
        android:id="@+id/seek_bar_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_view_health_points"
        android:layout_marginBottom="16dp"
        android:max="100" />

    <TextView
        android:id="@+id/text_view_health_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar_health_points"
        android:layout_marginBottom="16dp"
        android:text="Points de Vie" />

    <SeekBar
        android:id="@+id/seek_bar_health_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_Enregistrer"
        android:layout_marginBottom="18dp"
        android:max="150"
        android:min="50" />
</LinearLayout>
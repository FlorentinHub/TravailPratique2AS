<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:title="MagaGestionne"
        android:titleTextColor="#FFFFFF"/>

    <ListView
        android:id="@+id/lv_Personnages"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/toolbar"></ListView>
    <FrameLayout
        android:id="@+id/fm_details"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_below="@+id/lv_Personnages">
    </FrameLayout>

    <Button
        android:id="@+id/btn_modifier"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@id/btn_gotoAddPersonnage"
        android:text="Modifier" />
    <Button
        android:id="@+id/btn_gotoAddPersonnage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ajouter un personnage"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
